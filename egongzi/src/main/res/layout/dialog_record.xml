<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/create_user_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/lightblue"
            android:text="  生产记录"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_vertical">
        </TextView>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/record_employee"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:minHeight="45dp"
            android:popupBackground="@drawable/spinner"
            android:dropDownSelector="@drawable/spinner">
        </android.support.v7.widget.AppCompatSpinner>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/record_product"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:minHeight="45dp"
            android:popupBackground="@drawable/spinner">
        </android.support.v7.widget.AppCompatSpinner>

        <TextView
            android:id="@+id/record_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:hint="记录日期"
            android:textSize="18sp"
            android:textColor="#000"
            android:inputType="date"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/record_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:hint="生产数量"
            android:minHeight="45dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:inputType="number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_save_pop"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="保存" />
            <Button
                android:id="@+id/btn_cancel_pop"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="取消" />
        </LinearLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>