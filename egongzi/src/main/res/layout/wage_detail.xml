<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/detail"
        android:layout_alignParentLeft="true"
        android:id="@+id/image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/image"
                    android:id="@+id/block0"/>
                <TextView
                    android:id="@+id/wage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="2017-10-10"
                    android:textColor="#00a"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/block0"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/wage_name"
                    android:id="@+id/block1"/>
                <TextView
                    android:id="@+id/detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="621内衬甲标有问题"
                    android:textColor="#060"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/block1"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/detail_product"
                    android:id="@+id/block2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/image"/>
                <TextView
                    android:id="@+id/detail_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/block2"
                    android:layout_toRightOf="@+id/block2"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="#000"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/detail_amount"
                    android:text="个"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/image"/>
                <TextView
                    android:id="@+id/wage_item"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1000.00"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#822"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>